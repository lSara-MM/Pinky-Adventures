<config>
	<app>
		<title>Pinky Adventures :D</title>
		<organization>UPC</organization>
	</app>

	<renderer>
		<vsync value="true"/>
		<camera x="0" y="0"/>
	</renderer>

	<window>
		<resolution width="1024" height="767" scale="2"/>
		<fullscreen value="false"/>
		<borderless value="false"/>
		<resizable value="false"/>
		<fullscreen_window value="false"/>
	</window>

	<audio>
		<music volume="128"/>
		<fx volume="128"/>
	</audio>

	<fadeToBlack>
	</fadeToBlack>

	<logoScene background="Assets/Maps/logo_bg.png" audioLogoPath ="Assets/Audio/Music/music_logo.ogg"/>
	<loseScene background="Assets/Maps/lose_bg.png" losebutton1="Assets/Maps/rect_pa.png" losebutton2="Assets/Maps/rect_gu.png"
		musicLose="Assets/Audio/Music/the_end.ogg"/>

	<introScene background="Assets/Maps/intro_bg.png" audioIntroPath ="Assets/Audio/Music/music_intro.ogg" p2sPath ="Assets/Maps/press2start.png"/>/>
	
	<scene music="Assets/Audio/Music/lvl_1.ogg"
	   background1 ="Assets/Maps/clouds_bg.png" background2 ="Assets/Maps/clouds_mg_1.png" background3 ="Assets/Maps/clouds_mg_2.png">

	<player x="120" y="260"
			texturepath="Assets/Textures/character.png"
			velocity="5" width="20" height="27"
			audiopathCoin="Assets/Audio/Fx/Coin.wav"
			audiopathGem="Assets/Audio/Fx/Gem.wav"
			audiopathJump ="Assets/Audio/Fx/sfx_jump.wav "
			audiopathLand ="Assets/Audio/Fx/sfx_landing.wav"
			audiopathDeath ="Assets/Audio/Fx/sfx_vaporizing.wav"
			audiopathSecret ="Assets/Audio/Fx/sfx_secret.wav"
			audiopathLoseB=""/>
		
	<enemy x_E="2072" y_E="285"
			texturepath_E="Assets/Textures/character.png"
			velocity_E="5" widthE="20" height_E="27"
			audiopathJump_E ="Assets/Audio/Fx/sfx_jump.wav "
			audiopathLand_E ="Assets/Audio/Fx/sfx_landing.wav"
			audiopathDeath_E ="Assets/Audio/Fx/sfx_vaporizing.wav"/>
		
	<!--COINS-->
	<item name="coin" texturepath="Assets/Maps/coin.png"/>

	<!--GEM-->
	<item2  name="gem" x="2072" y="285" texturepath="Assets/Maps/gems.png"/>

</scene>

	<map>
		<mapfolder path="Assets/Maps/"/>
		<mapfile path="Assets/Maps/map1.tmx"/>

		<map1>
		</map1>
	</map>

</config>
